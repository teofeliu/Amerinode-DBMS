@using WebApplication.Attributes

@model IEnumerable<WebApplication.Models.Application.Parameters>
@{
    ViewBag.Title = "Parameters";
}


@section submenu {left-sidebar-menu-cruds-pts}


<div class="row">
    <div class="col-xs-12">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Parameters</h3>
            </div>
            <div class="box-body">
                <table id="datatable" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>@Html.DisplayNameFor(model => model.Id)</th>
                            @*<th>@Html.DisplayNameFor(model => model.Name)</th>*@
                            <th>@Html.DisplayNameFor(model => model.Description)</th>
                            <th>@Html.DisplayNameFor(model => model.Value)</th>

                            <th>Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                                @*<td>@Html.DisplayFor(modelItem => item.Name)</td>*@
                                <td>@Html.DisplayFor(modelItem => item.Description)</td>
                                <td>@Html.DisplayFor(modelItem => item.Value)</td>
                                <td>
                                    @if (User.HasPermissions("Parameters", "Write"))
                                    {
                                        @Html.ActionLink("Edit", "Create", new { id = item.Id })                                    }

                                   
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


    </div>
</div>

@section Scripts {
    <script>
        $(function () {
            $('#datatable').DataTable({
                "paging": true,
                "lengthChange": false,
                "searching": false,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "pageLength": 50
            });
            var txt = document.getElementsByName('q')[0];
            txt.focus();
        });
    </script>
}

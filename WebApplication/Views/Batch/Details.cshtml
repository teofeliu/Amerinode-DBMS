@model WebApplication.Models.Application.Batch
@{
    ViewBag.Title = "Details";
    ViewBag.SubTitle = "Batch";
}

<div class="row">
    <div class="col-md-6">
        <div class="box box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">For batch #@Model.Id</h3>
            </div>

            @if (@ViewBag.Message != null)
            {
                <div class="box-body">
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        <p>
                            @ViewBag.Message
                        </p>

                    </div>
                </div>
            }
            
        <div class="box box">
            <div class="box-header">
                <h4 class="box-title">Batch Details</h4>
            </div>

            <div class="box-body">
                <div class="form-group">
                    <label class="btn-block">Date</label>
                    <span>@Model.Date</span>
                </div>
            </div>
            @if (Model.ModelId != null)
            {
                <div class="box-body">
                    <div class="form-group">
                        <label class="btn-block">Model</label>
                        <span>#@Model.ModelId - @Model.Model.Name</span>
                    </div>
                </div>
            }

            <div class="box-body">
                <div class="form-group">
                    <label class="btn-block">Is Divergent?</label>
                    <span>@Model.GetDivergentVerbose() (@Model.Quantity received and @Model.QuantityConferred conferred)</span>
                </div>
            </div>

            <div class="box-body">
                <div class="form-group">
                    <label class="btn-block">Status</label>
                    <span class="Status @Model.Status">@Model.Status</span>
                </div>
            </div>

            <div class="box-body">
                <div class="form-group">
                    <label class="btn-block">Quantity Approved</label>
                    <span>@Model.QuantityApproved</span>
                </div>
            </div>

            <div class="box-body">
                <div class="form-group">
                    <label class="btn-block">Quantity Disapproved by Functional Test</label>
                    <span>@Model.QuantityDisapproved</span>
                </div>
            </div>

            <div class="box-body">
                <div class="form-group">
                    <label class="btn-block">Quantity Disapproved by Cosmetic</label>
                    <span>@Model.QuantityDisapprovedByCosmetic</span>
                </div>
            </div>

            <div class="box-body">
                <a id="printAgreement" href="@Url.Action("BatchReport", "Batch", new { id = @Model.Id})" class="btn btn-default">
                    <i class="fa fa-file-pdf-o"></i> Print Agreement Doc
                </a>
            </div>


        </div>

            <div class="box-footer">
                @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-default" })
               
            </div>

        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(function () {
            $('input[type="datetime"]').datepicker(
                { format: 'dd/mm/yyyy', }
             );


            $(".todo-list").sortable({
                placeholder: "sort-highlight",
                handle: ".handle",
                forcePlaceholderSize: true,
                zIndex: 999999
            });

        });
    </script>
}

@using WebApplication.Attributes

@model WebApplication.Models.Application.Batch

@{
    ViewBag.Title = "Delete Batch";
    ViewBag.SubTitle = "";
}
@section submenu {left-sidebar-menu-batch-delete}

<div class="row">
    <div class="col-md-6">
        <div class="box box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Please, confirm your action</h3>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="alert alert-warning">
                        <h4>
                            <i class="icon fa fa-question-circle fa-2x"></i>
                            Are you sure you want to delete @Html.DisplayFor(model => model.Id)?<br/>
                            <strong>ALL</strong> requested refurbs associated with this batch will be canceled together.
                        </h4>
                    </div>
                    @if (@ViewBag.Message != null)
                    {
                        <div class="alert alert-danger alert-dismissible">
                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                            <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                            <p>
                                @ViewBag.Message
                            </p>
                        </div>
                    }
                </div>

                <div class="box-footer">
                    @Html.ActionLink("Cancel", "Index", new { }, new { @class = "btn btn-default" })
                    @if (User.HasPermissions("Batch", "Delete"))
                    {
                        <input type="submit" value="Yes, Delete It!" class="btn btn-primary pull-right" />
                    }
                </div>
            }
        </div>
    </div>
</div>

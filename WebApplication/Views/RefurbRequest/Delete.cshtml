@using WebApplication.Attributes
@model WebApplication.Models.Application.RefurbRequest

@{
    ViewBag.Title = "Cancel Request";
    ViewBag.SubTitle = "Terminals";
}
@section submenu {left-sidebar-menu-cruds-models}

<div class="row">
    <div class="col-md-6">
        <div class="box box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">Please, confirm your action</h3>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                <div class="box-body">
                    <div class="alert alert-warning">
                        <h4>
                            <i class="icon fa fa-question-circle fa-2x"></i>
                            Are you sure you want to cancel request with ID = @Html.DisplayFor(model => model.Id)?
                        </h4>
                    </div>
                </div>

                <div class="box-footer">
                    @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-default" })
                    @if(User.HasPermissions("RefurbRequest", "Delete")) {
                        <input type="submit" value="Yes, Cancel It!" class="btn btn-primary pull-right" />
                    }
                </div>
            }
        </div>
    </div>
</div>

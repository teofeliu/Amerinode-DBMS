@{
    ViewBag.Title = "Details";
    ViewBag.SubTitle = "Request";
    var RequestId = ViewContext.RouteData.Values["id"];
}

<div class="row">
    <div class="col-md-6">
        <div class="box box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">For request #@ViewBag.Request.Id</h3>
            </div>

            @if (@ViewBag.Message != null)
            {
                <div class="box-body">
                    <div class="alert alert-danger alert-dismissible">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <h4><i class="icon fa fa-ban"></i> Alert!</h4>
                        <p>
                            @ViewBag.Message
                        </p>

                    </div>
                </div>
            }
            
            @RenderPage("~/Views/RefurbRequest/_details.cshtml")

            <div class="box-footer">
                @Html.ActionLink("Back", "Index", new { }, new { @class = "btn btn-default" })
            </div>

        </div>
    </div>
</div>



@section Scripts {
    <script>
        $(function () {
            $('input[type="datetime"]').datepicker(
                { format: 'dd/mm/yyyy', }
             );


            $(".todo-list").sortable({
                placeholder: "sort-highlight",
                handle: ".handle",
                forcePlaceholderSize: true,
                zIndex: 999999
            });

        });
    </script>
}
